<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".caixadialogo.DialogCriarProduto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/material_on_background_disabled"
        app:boxStrokeColor="@color/white"
        app:hintTextColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtNomeProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margem_lateral_formulario"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/margem_lateral_formulario"
            android:ems="10"
            android:hint="@string/nome_produto"
            android:imeOptions="actionNext"
            android:inputType="textPersonName">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/material_on_background_disabled"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPrecoProdutoFornecedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/margem_lateral_formulario"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/margem_lateral_formulario"
                    android:ems="10"
                    android:hint="@string/preco_fornecedor"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="15"
                    android:text="@string/preco_zero">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnLimparPrecoFornecedor"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginEnd="@dimen/margem_lateral_formulario"
                android:layout_weight="1"
                android:textSize="14sp"
                app:icon="@drawable/ic_baseline_cleaning_services_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/material_on_background_disabled"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPrecoProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/margem_lateral_formulario"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/margem_lateral_formulario"
                    android:ems="10"
                    android:hint="@string/preco"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="15"
                    android:text="@string/preco_zero">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnLimparPreco"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginEnd="@dimen/margem_lateral_formulario"
                android:layout_weight="1"
                android:textSize="14sp"
                app:icon="@drawable/ic_baseline_cleaning_services_24" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margem_lateral_formulario"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkIva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margem_lateral_formulario"
            android:text="@string/iva" />

            <TextView
                android:id="@+id/textMontanteIva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_lateral_formulario" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/material_on_background_disabled"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtQuantidadeProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margem_lateral_formulario"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/margem_lateral_formulario"
                    android:ems="10"
                    android:hint="@string/quantidade"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:text="1">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinnerQuantidade"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginEnd="@dimen/margem_lateral_formulario"
                android:spinnerMode="dropdown" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margem_lateral_formulario"
            android:background="?android:attr/listDivider" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margem_lateral_formulario"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:text="@string/possivel_receita"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textPossivelReceita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margem_lateral_formulario"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:text="@string/possivel_lucro"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textPossivelLucro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textColor="@android:color/holo_green_dark" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margem_lateral_formulario"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:text="@string/possivel_lucro_percentagem"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textPossivelLucroPercentagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:textColor="@android:color/holo_green_dark" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margem_lateral_formulario"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margem_lateral_formulario"
            android:background="?android:attr/listDivider" />

        <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@android:color/holo_blue_light"
        app:boxStrokeColor="@color/white"
        app:hintTextColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtCodigoBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margem_lateral_formulario"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/margem_lateral_formulario"
            android:ems="10"
            android:hint="@string/codigo_bar"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textAlignment="center"
            android:textStyle="bold">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnScannerFront"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:text="@string/scanear"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:icon="@drawable/ic_baseline_camera_front_24" />

        <View
            android:id="@+id/divider11"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btnScannerBack"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/scanear"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:icon="@drawable/ic_baseline_camera_rear_24" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margem_lateral_formulario"
            android:text="@string/estado" />

        <Switch
            android:id="@+id/switch_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margem_lateral_formulario"
            android:layout_marginRight="@dimen/margem_lateral_formulario"
            android:checked="false"
            android:text="@string/estado_desbloqueado" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <Switch
            android:id="@+id/switch_continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margem_lateral_formulario"
            android:layout_marginRight="@dimen/margem_lateral_formulario"
            android:text="@string/continuar_criar_produto" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margem_lateral_formulario"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textDataCria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margem_lateral_formulario"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textDataModifica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margem_lateral_formulario"
            android:layout_marginTop="@dimen/margem_lateral_formulario"
            android:layout_marginBottom="@dimen/margem_lateral_formulario"
            android:visibility="gone" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margem_lateral_formulario"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btnCriarProduto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margem_lateral_formulario"
            android:layout_marginRight="@dimen/margem_lateral_formulario"
            android:text="@string/criar" />

        <Button
            android:id="@+id/btnSalvarProduto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margem_lateral_formulario"
            android:layout_marginRight="@dimen/margem_lateral_formulario"
            android:text="@string/salvar_alteracao"
            android:visibility="gone"
            app:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:id="@+id/btnEliminarProduto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margem_lateral_formulario"
            android:layout_marginRight="@dimen/margem_lateral_formulario"
            android:text="@string/eliminar_produto"
            android:visibility="gone"
            app:backgroundTint="@android:color/holo_red_light" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margem_lateral_formulario"
            android:layout_marginRight="@dimen/margem_lateral_formulario"
            android:layout_marginBottom="@dimen/margem_lateral_formulario"
            android:text="@string/cancelar"
            app:backgroundTint="@android:color/holo_orange_light" />
    </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>