<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/myCoordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FacturaFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ViewStub
                android:id="@+id/viewStub"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout="@layout/barcodescanner" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:boxBackgroundColor="@color/material_on_background_disabled"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNomeCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/nome_cliente"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName|text">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:layout_marginTop="@dimen/margem_lateral_formulario"
                android:layout_marginEnd="@dimen/margem_lateral_formulario"
                android:background="#1E88E5"
                android:text="@string/categorias"
                android:textColor="#FFFFFF" />

            <Spinner
                android:id="@+id/spinnerCategorias"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:layout_marginEnd="@dimen/margem_lateral_formulario"
                android:background="#C6C6C6" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:layout_marginTop="@dimen/margem_lateral_formulario"
                android:layout_marginEnd="@dimen/margem_lateral_formulario"
                android:layout_marginBottom="@dimen/margem_lateral_formulario"
                android:background="#43A047"
                android:text="@string/produtos"
                android:textColor="#FFFFFF" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFacturaProduto"
                android:name="com.yoga.mborasystem.view.FacturaFragment"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:layout_marginEnd="@dimen/margem_lateral_formulario"
                tools:context=".view.FacturaFragment"
                tools:listitem="@layout/fragment_lista_produto" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="?android:attr/listDivider" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnScannerFront"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="@string/scanear"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_baseline_camera_front_24" />

                <Button
                    android:id="@+id/btnClose"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="@string/fechar"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    app:backgroundTint="#E53935" />

                <Button
                    android:id="@+id/btnScannerBack"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="@string/scanear"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_baseline_camera_rear_24" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:id="@+id/divider12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFactura"
                android:name="com.yoga.mborasystem.view.FacturaFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".view.FacturaFragment"
                tools:listitem="@layout/fragment_lista_factura" />

            <TextView
                android:id="@+id/textTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margem_lateral_formulario"
                android:text="0,00"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margem_lateral_formulario"
                android:background="?android:attr/listDivider" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem_lateral_formulario"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="@string/taxa"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp"
                    android:text="@string/valor"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp"
                    android:text="@string/montante_iva"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textColor="#000000" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margem_lateral_formulario"
            android:background="?android:attr/listDivider" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem_lateral_formulario"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textTaxa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textValor"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textIva"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtTot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margem_lateral_formulario"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:text="@string/desconto" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:boxBackgroundColor="@color/material_on_background_disabled"
                    app:boxStrokeColor="@color/white"
                    app:hintTextColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textDesconto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/valor_kwanza"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:text="@string/preco_zero"
                        android:maxLength="15"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnLimpar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margem_lateral_formulario"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_baseline_cleaning_services_24"
                    android:backgroundTint="@color/zxing_possible_result_points"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margem_lateral_formulario"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/totalDesconto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0,00"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:text="@string/valor_pago" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:boxBackgroundColor="@color/material_on_background_disabled"
                    app:boxStrokeColor="@color/white"
                    app:hintTextColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textValorPago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/valor_kwanza"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:text="@string/preco_zero"
                        android:maxLength="15"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnLimparValorPago"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margem_lateral_formulario"
                    android:layout_weight="1"
                    app:icon="@drawable/ic_baseline_cleaning_services_24"
                    android:backgroundTint="@color/zxing_possible_result_points" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margem_lateral_formulario"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/troco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0,00"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margem_lateral_formulario"
                android:text="@string/forma_pagamento" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_dinheiro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem_lateral_formulario"
                android:layout_marginRight="@dimen/margem_lateral_formulario"
                android:text="@string/dinheiro" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_cartao_multicaixa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem_lateral_formulario"
                android:layout_marginRight="@dimen/margem_lateral_formulario"
                android:text="@string/cartao_multicaixa" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_deposito_bancario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem_lateral_formulario"
                android:layout_marginRight="@dimen/margem_lateral_formulario"
                android:text="@string/deposito_bancario" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_transferencia_bancario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem_lateral_formulario"
                android:layout_marginRight="@dimen/margem_lateral_formulario"
                android:text="@string/transferencia_bancario" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margem_lateral_formulario"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/btnEfectuarVenda"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margem_lateral_formulario"
                android:layout_marginRight="@dimen/margem_lateral_formulario"
                android:layout_marginBottom="@dimen/margem_lateral_formulario"
                android:enabled="false"
                android:text="@string/efectuar_venda"
                app:backgroundTint="@android:color/holo_green_light" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>