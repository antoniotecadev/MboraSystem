<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".view.FacturaFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/mySwipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ViewStub
                    android:id="@+id/viewStub"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout="@layout/barcodescanner" />

                <Button
                    android:id="@+id/buttonFechar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:layout_marginEnd="@dimen/margem_lateral_formulario"
                    android:text="@string/fechar"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:backgroundTint="#E53935" />

                <Button
                    android:id="@+id/switchFlashlightButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:layout_marginEnd="@dimen/margem_lateral_formulario"
                    android:text="@string/turn_on_flashlight"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:backgroundTint="#FDD835" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout2"
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        app:boxBackgroundColor="@color/material_on_background_disabled"
                        app:boxStrokeColor="@color/white"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/cor_castanha"
                        app:endIconTintMode="multiply"
                        app:hintTextColor="@color/white">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/txtNomeCliente"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:completionHint="@string/clientes"
                            android:completionThreshold="1"
                            android:digits="@string/nome_cli_carac_aceite"
                            android:hint="@string/csm_fnl"
                            android:imeOptions="actionNext"
                            android:inputType="textPersonName|text"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnCleaNameClient"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/margem_lateral_formulario"
                        app:backgroundTint="@android:color/holo_red_light"
                        app:icon="@android:drawable/ic_delete"
                        app:iconGravity="textEnd" />

                    <Button
                        android:id="@+id/btnCriarCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/margem_lateral_formulario"
                        app:backgroundTint="@color/cor_castanha"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconGravity="textEnd" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkboxTodosProdutos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margem_lateral_formulario"
                    android:layout_marginRight="@dimen/margem_lateral_formulario"
                    android:text="@string/cst_tds_prod"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:layout_marginTop="@dimen/margem_lateral_formulario"
                    android:layout_marginEnd="@dimen/margem_lateral_formulario"
                    android:background="#1E88E5"
                    android:text="@string/categorias"
                    android:textColor="#FFFFFF" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerCategorias"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:layout_marginEnd="@dimen/margem_lateral_formulario"
                    android:background="#C6C6C6"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:layout_marginTop="@dimen/margem_lateral_formulario"
                    android:layout_marginEnd="@dimen/margem_lateral_formulario"
                    android:layout_marginBottom="@dimen/margem_lateral_formulario"
                    android:background="#43A047"
                    android:text="@string/produtos"
                    android:textColor="#FFFFFF" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFacturaProduto"
                    android:name="com.yoga.mborasystem.view.FacturaFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:layout_marginEnd="@dimen/margem_lateral_formulario"
                    tools:context=".view.FacturaFragment"
                    tools:listitem="@layout/fragment_lista_produto" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnScannerFront"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/scanear"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_baseline_qr_code_scanner_24" />

                    <Button
                        android:id="@+id/btnClose"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/fechar"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:backgroundTint="#E53935" />

                    <Button
                        android:id="@+id/btnScannerBack"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:text="@string/scanear"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_baseline_qr_code_scanner_24" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFactura"
                    android:name="com.yoga.mborasystem.view.FacturaFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".view.FacturaFragment"
                    tools:listitem="@layout/fragment_lista_factura" />

                <TextView
                    android:id="@+id/textTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margem_lateral_formulario"
                    android:text="@string/preco_zero_sem_kz"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margem_lateral_formulario"
                    android:background="@color/textColorM" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="@string/taxa"
                        android:textColor="@color/textColor"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="70dp"
                        android:text="@string/valor"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="70dp"
                        android:text="@string/montante_iva"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textColor="@color/textColor" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margem_lateral_formulario"
                    android:background="@color/textColorM" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTaxa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/textColorM"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textValor"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorM" />

                    <TextView
                        android:id="@+id/textIva"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorM" />

                    <TextView
                        android:id="@+id/txtTot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorM" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margem_lateral_formulario"
                    android:layout_marginBottom="@dimen/margem_lateral_formulario"
                    android:background="@color/textColorM" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewDesconto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margem_lateral_formulario"
                        android:layout_marginEnd="@dimen/margem_lateral_formulario"
                        android:text="@string/desconto"
                        android:textColor="@color/textColorM"
                        android:textSize="20sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDesconto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorM" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerDesconto"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:layout_marginEnd="@dimen/margem_lateral_formulario"
                    android:layout_marginBottom="@dimen/margem_lateral_formulario"
                    android:background="#979797"
                    android:spinnerMode="dropdown"
                    android:visibility="gone"
                    tools:ignore="SpeakableTextPresentCheck" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearLayoutDesconto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:boxBackgroundColor="@color/material_on_background_disabled"
                        app:boxStrokeColor="@color/white"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/cor_castanha"
                        app:endIconTintMode="multiply"
                        app:hintTextColor="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textDesconto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/valor_kwanza"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="15"
                            android:text="@string/preco_zero"
                            android:textSize="24sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnLimpar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margem_lateral_formulario"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/holo_orange_light"
                        app:icon="@drawable/ic_baseline_cleaning_services_24"
                        tools:targetApi="lollipop" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/totalDesconto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preco_zero_sem_kz"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margem_lateral_formulario"
                    android:layout_marginBottom="@dimen/margem_lateral_formulario"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:text="@string/valor_pago"
                    android:textColor="@color/textColorM"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:boxBackgroundColor="@color/material_on_background_disabled"
                        app:boxStrokeColor="@color/white"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/cor_castanha"
                        app:endIconTintMode="multiply"
                        app:hintTextColor="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textValorPago"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/valor_kwanza"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="15"
                            android:text="@string/preco_zero"
                            android:textSize="24sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnLimparValorPago"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margem_lateral_formulario"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/holo_orange_light"
                        app:icon="@drawable/ic_baseline_cleaning_services_24"
                        tools:targetApi="lollipop" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/troco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preco_zero_sem_kz"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margem_lateral_formulario"
                    android:layout_marginBottom="@dimen/margem_lateral_formulario"
                    android:background="?android:attr/listDivider" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkboxDivida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margem_lateral_formulario"
                        android:layout_marginRight="@dimen/margem_lateral_formulario"
                        android:text="@string/dvd"
                        android:textColor="@color/textColorM"
                        android:visibility="gone" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkboxSemValorPago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/se_val_pag"
                        android:textColor="@color/textColorM"
                        android:visibility="gone" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDivida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margem_lateral_formulario"
                        android:text="@string/dvd"
                        android:textColor="@color/textColorM"
                        android:textSize="20sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearLayoutDivida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:boxBackgroundColor="@color/material_on_background_disabled"
                        app:boxStrokeColor="@color/white"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/cor_castanha"
                        app:endIconTintMode="multiply"
                        app:hintTextColor="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textValorDivida"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="@string/valor_kwanza"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="15"
                            android:text="@string/preco_zero"
                            android:textSize="24sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnLimparValorDivida"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/margem_lateral_formulario"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/holo_orange_light"
                        app:icon="@drawable/ic_baseline_cleaning_services_24"
                        tools:targetApi="lollipop" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:text="@string/alter"
                    android:textColor="@color/textColorM"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margem_lateral_formulario"
                    android:background="@color/textColorM" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margem_lateral_formulario"
                    android:layout_marginTop="@dimen/margem_lateral_formulario"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margem_lateral_formulario"
                        android:text="@string/forma_pagamento"
                        android:textColor="@color/textColorM" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchFormaPagamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margem_lateral_formulario"
                        android:text="@string/most_mais"
                        android:textColor="@color/textColorM" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkboxNumerario"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margem_lateral_formulario"
                        android:layout_marginRight="@dimen/margem_lateral_formulario"
                        android:textSize="12sp"
                        android:text="@string/numerario"
                        android:textColor="@color/textColor" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/cor_castanha"
                        app:endIconTintMode="multiply">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dinheiroValorPago"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="@string/valor_kwanza"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="15"
                            android:text="@string/preco_zero"
                            android:textColor="@color/textColorM" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearLayoutCartaoMultcaixa"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkboxCartaoMulticaixa"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margem_lateral_formulario"
                        android:layout_marginRight="@dimen/margem_lateral_formulario"
                        android:textSize="12sp"
                        android:text="@string/cartao_multicaixa"
                        android:textColor="@color/textColor" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/cor_castanha"
                        app:endIconTintMode="multiply">

