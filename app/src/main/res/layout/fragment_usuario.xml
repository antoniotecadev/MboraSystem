<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <androidx.cardview.widget.CardView
      android:id="@+id/btnEntrar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/margem_card_view"
      android:layout_marginTop="5dp"
      android:layout_marginRight="@dimen/margem_card_view"
      android:layout_marginBottom="5dp"
      android:clickable="true"
      android:foreground="?attr/selectableItemBackground"
      app:cardBackgroundColor="@color/cardColorNormal"
      android:outlineSpotShadowColor="@color/white"
      app:cardElevation="6dp"
      android:focusable="true"
      tools:targetApi="p">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <TextView
          android:id="@+id/txtNomeUsuario"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/margem_lateral_formulario"
          android:layout_marginRight="@dimen/margem_lateral_formulario"
          android:layout_marginBottom="5dp"
          android:textAppearance="?attr/textAppearanceListItem"
          android:textColor="@color/textColor"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/txtTel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/margem_lateral_formulario"
          android:layout_marginRight="@dimen/margem_lateral_formulario"
          android:layout_marginBottom="5dp"
          android:textAppearance="?attr/textAppearanceListItem"
          android:textColor="@color/cor_castanha"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/txtEnd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/margem_lateral_formulario"
          android:layout_marginRight="@dimen/margem_lateral_formulario"
          android:layout_marginBottom="5dp"
          android:textAppearance="?attr/textAppearanceListItem"
          android:textColor="@color/cor_castanha"
          android:textSize="14sp" />


      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margem_lateral_formulario"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:drawableEndCompat="@drawable/ic_baseline_delete_40" />

        <TextView
            android:id="@+id/txtBloquear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margem_lateral_formulario"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/margem_lateral_formulario"
            android:gravity="end" />

      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

  </androidx.cardview.widget.CardView>
</LinearLayout>