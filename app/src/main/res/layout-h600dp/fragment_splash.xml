<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SplashFragment"
    android:background="@color/backgroundColor"
    tools:ignore="MissingDefaultResource">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="200dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/ic_baseline_store_24" />

  <TextView
      android:id="@+id/tvNomeSistema"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:fontFamily="monospace"
      android:text="@string/nome_sistema"
      android:textAlignment="center"
      android:textAllCaps="false"
      android:textColor="@color/cor_castanha"
      android:textSize="@dimen/tamanho_nome_sistema_tela_inicial"
      android:textStyle="bold|italic"
      android:typeface="normal"
      app:layout_constraintEnd_toEndOf="@+id/imageView"
      app:layout_constraintStart_toStartOf="@+id/imageView"
      app:layout_constraintTop_toBottomOf="@+id/imageView" />

  <ImageView
      android:id="@+id/imageView1"
      android:layout_width="0dp"
      android:layout_height="70dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/tvNomeSistema"
      app:layout_constraintStart_toStartOf="@+id/tvNomeSistema"
      app:layout_constraintTop_toBottomOf="@+id/tvNomeSistema"
      android:src="@drawable/ic_logotipo_yoga_original" />

  <TextView
      android:id="@+id/textView24"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="@string/slogan_yoga"
      android:textColor="@color/black"
      android:textSize="12sp"
      app:layout_constraintEnd_toEndOf="@+id/imageView1"
      app:layout_constraintStart_toStartOf="@+id/imageView1"
      app:layout_constraintTop_toBottomOf="@+id/imageView1" />

</androidx.constraintlayout.widget.ConstraintLayout>